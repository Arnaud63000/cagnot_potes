{{ form_start(form) }}
    <div class="input-field col s12 l6">
        <input id="author" type="text" name="name" class="validate">
        <label for="author">Votre Nom</label>
    </div>
    <div class="input-field col s12 l6">
        <input id="email" type="email" name="email" class="validate">
        <label for="email">Votre Email</label>
    </div>
    {{ form_widget(form) }}

    <button class="btn btn-large waves-effect waves-light pink lighten-1 col s12" style="margin-top: 20px;" type="submit" name="action">
        Validez la campagne
        <i class="material-icons right">send</i>
    </button>   
    {% if campaign_title is defined %}
        {% block javascripts %}
            <script>
                var inputCampaignTitle = document.querySelector('#campaign_title');
                inputCampaignTitle.value = '{{ campaign_title }}';
            </script>
        {% endblock %}
    {% endif %}
{{ form_end(form) }}
